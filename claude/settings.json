{
  "permissions": {
    "allow": [
      "Bash(gh pr view:*)",
      "Bash(gh repo view:*)",
      "Bash(gh pr diff:*)",
      "Bash(git diff:*)",
      "Bash(wc:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "WebSearch",
      "Bash(git diff:*)",
      "Bash(./bin/rspec:*)",
      "Skill(commit)",
      "WebFetch(domain:*)"
    ]
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true
  },
  "language": "Japanese",
  "terminalProgressBarEnabled": true,
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  }
}
